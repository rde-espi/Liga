@model Liga.web.Models.AddItemsViewModel
@{
    ViewData["Title"] = "AddGame";
}

<h2>Add Game</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGame">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamAId" class="control-label"></label>
                <select asp-for="TeamAId" asp-items="Model.Teams" class="form-control"></select>
                <span asp-validation-for="TeamAId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamBId" class="control-label"></label>
                <select asp-for="TeamBId" asp-items="Model.Teams" class="form-control"></select>
                <span asp-validation-for="TeamBId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsConcluded" /> @Html.DisplayNameFor(model => model.IsConcluded)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Game" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>