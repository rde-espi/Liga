@model Liga.web.Models.AddItemsViewModel
@{
    ViewData["Title"] = "AddGame";
}

<h1>AddGame</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamAId" class="control-label"></label>
                <select asp-for="TeamAId" asp-items="Model.Teams" class="form-control"></select>
                <span asp-validation-for="TeamAId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamBId" class="control-label"></label>
