@model IEnumerable<Liga.web.Data.Entity.Journey>

@{
    ViewData["Title"] = "Index";
}

<h1>Journeys</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            @if (this.User.IsInRole("Admin"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.User.FullName)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.JourneyStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JourneyEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JourneyStart)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.JourneyEnd)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Games)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
